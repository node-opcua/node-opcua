{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "coverage/",
      "dist/*",
      "doc1/*",
      "documentation/*",
      "node_modules/*",
      "**/*.js"
    ]
  },
  "jsRules": {},
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "object-literal-sort-keys": false,
    "max-line-length": false,
    "no-consecutive-blank-lines": true,
    "interface-name": [
      false,
      "never-prefix"
    ],
    "interface-over-type-literal": true,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      true
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "rulesDirectory": []
}