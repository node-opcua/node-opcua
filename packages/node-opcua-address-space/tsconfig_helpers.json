{
    "extends": "../tsconfig.common.json",
    "compilerOptions": {
        "rootDir": "test_helpers",
        "outDir": "distHelpers",
        "composite": true,
        "incremental": true
    },
    "ts-node": {
        "compilerOptions": {
            "inlineSourceMap": true
        }
    },
    "include": [
        "test_helpers/**.ts"
    ],
    "references": [
        {
            "path": "./tsconfig_base.json"
        },
        {
            "path": "./tsconfig_nodejs.json"
        }
    ],
    "exclude": [
        "node_modules",
        "dist*"
    ]
}