{
    "extends": "../tsconfig.common.json",
    "compilerOptions": {
        "rootDir": "source_nodejs",
        "outDir": "distNodeJS",
        "composite": true,
        "incremental": true
    },
    "ts-node": {
        "compilerOptions": {
            "inlineSourceMap": true
        }
    },
    "include": [
        "source_nodejs/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist*"
    ],
    "references": [
        {
            "path": "./tsconfig_base.json"
        }
    ]
}