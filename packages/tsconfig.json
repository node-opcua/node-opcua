{
    "compilerOptions": {
        "moduleResolution": "node",
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "listFiles": false,
        "noStrictGenericChecks": false,
        "noImplicitThis": true,
        "skipLibCheck": false,
        "removeComments": false /* to prevent Istanbul  ignore statement in comment to disappear */,
        "outDir": "dist",
        "incremental": true,
        "composite": true
    },
    "exclude": ["**/node_modules/*", "node_modules", "**/dist/*", "packages/*", "tmp/*"],
    "include": [],
    "references": [
        { "path": "node-opcua" },
        {
            "path": "node-opcua-address-space"
        },
        { "path": "node-opcua-test-fixtures" },
        { "path": "node-opcua-aggregates" },
        { "path": "node-opcua-file-transfer" },
        { "path": "node-opcua-benchmarker" },
        { "path": "node-opcua-modeler" },
        { "path": "node-opcua-local-discovery-server" },
        { "path": "node-opcua-samples" },
        { "path": "node-opcua-convert-nodeset-to-javascript" },
        { "path": "node-opcua-model"}
    ]
}
