{
    "compilerOptions": {
        "moduleResolution": "node",
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "listFiles": false,
        "noStrictGenericChecks": false,
        "noImplicitThis": true,
        "skipLibCheck": false,
        "removeComments": true,
        "outDir": "dist",
        "incremental": true,
        "composite": true
    },
    "exclude": ["**/node_modules/*", "node_modules", "**/dist/*", "packages/*"],
    "references": [
        { "path": "node-opcua" },
        { "path": "node-opcua-test-fixtures" },
        { "path": "node-opcua-aggregates" },
        { "path": "node-opcua-file-transfer" },
        { "path": "node-opcua-benchmarker" },
        { "path": "node-opcua-modeler" },
        { "path": "node-opcua-local-discovery-server" },
        { "path": "node-opcua-samples" }
    ]
}
